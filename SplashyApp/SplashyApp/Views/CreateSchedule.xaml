<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SplashyApp.Views.CreateSchedule">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Create Schedule" FontSize="Medium"   VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"/>

        
            
            <Picker x:Name="CronExpressionPicker"  Title="Selected expression"
            SelectedIndexChanged="SelectedIndexChanged"></Picker>

            <Button Text="Ok" Clicked="Ok"></Button>
            <Button Text="Cancel" Clicked="Cancel"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>